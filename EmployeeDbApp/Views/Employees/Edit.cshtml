@model EmployeeDbApp.Models.Content.Employee



@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">   
    <div class="row">
      <div class="card col-md-6 offset-md-3 border-3 p-5 shadow">
       
        <form asp-action=@ViewBag.Title>
          <div asp-validation-summary=All class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
          <h3 align ="center"> Edit </h3>

            <hr />

          <div class="row-cols-md-2 mb-sm-3">
               <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" placeholder="Full Name" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
          </div>


            <div class="row g-3">
              <div class="col mb-sm-3">
                    <label asp-for="DOB" class="control-label"></label>
                    <input asp-for="DOB" class="form-control" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
              </div>
              <div class="col mb-sm-3">
                    <label asp-for="HiringDate" class="control-label"></label>
                    <input asp-for="HiringDate" class="form-control" placeholder="Hiring Date" />
                    <span asp-validation-for="HiringDate" class="text-danger"></span>
              </div>
            </div>

            

          <div class="row-cols-md-2 mb-sm-3">
               <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
          </div>



          <div class="row-cols-md-2 mb-sm-3">
              <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"  placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
          </div>



          <div class="row-cols-md-2 mb-sm-3">
              <label asp-for="CityName" class="control-label"></label>
               <select  class="form-select" aria-label="Select City"  asp-for="CityId" asp-items ="@(new SelectList(ViewBag.City,"CityId","CityName"))"> <option selected> Choose a city ....</option>  </select>      
          </div>



          <div class="row-cols-md-2 mb-sm-3">
              <label asp-for="DepartmentName" class="control-label"></label>
                <select  class="form-select" aria-label="Select Department"  asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Department,"DepartmentId","DepartmentName"))"> <option selected> Choose a department ....</option>  </select>            
          </div>



            <div class="row-cols-md-2 mb-sm-3">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" placeholder="Job Title" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>





          <div class="row-cols-md-2 mb-sm-3">
              <label asp-for="GrossSalary" class="control-label"></label>
                <input asp-for="GrossSalary" class="form-control" placeholder="Gross Salary" />
                <span asp-validation-for="GrossSalary" class="text-danger"></span>
          </div>



          <div class="row-cols-md-2 mb-sm-3">
              <label asp-for="NetSalary" class="control-label"></label>
                <input asp-for="NetSalary" class="form-control" placeholder="Net Salary"/>
                <span asp-validation-for="NetSalary" class="text-danger"></span>
          </div>


          <hr>


            <div class="row ">
                <input asp-action="Edit" type="submit" value="Save" class="btn btn-primary col-md-2 " />

                <input type="reset" class="btn btn-warning col-md-2 ms-md-auto">
                <a asp-action="Index" class="btn btn-dark col-md-2 ms-md-auto">Cancel</a>
            
            </div>


        </form>
      </div>
    </div>
  </div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}







